<%- include("./additional/header.ejs") %>
<!-- component -->
<center>
    
<div style="background-color: #161513;" className="w-1/2 text-left">
    <br>
    <nav aria-label="breadcrumb" class="w-max">
        <ol class="flex w-full flex-wrap items-center rounded-md bg-blue-gray-50 bg-opacity-60 py-2 px-4">
          <li class="flex cursor-pointer items-center font-sans text-sm font-normal leading-normal text-white antialiased transition-colors duration-300 hover:text-pink-500">
            <a class="opacity-60" href="/">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-4 w-4"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
              </svg>
            </a>
            <span class="pointer-events-none mx-2 select-none font-sans text-sm font-normal leading-normal text-gray-400 antialiased">
              /
            </span>
          </li>
          <li class="flex cursor-pointer items-center font-sans text-sm font-normal leading-normal text-white antialiased transition-colors duration-300 hover:text-pink-500">
            <a class="opacity-60" href="/blog">
              <span>blog</span>
            </a>
          </li>
        </ol>
      </nav>
</div>
      <center>
  <!-- stylesheet -->
  <link
    rel="stylesheet"
    href="https://unpkg.com/@material-tailwind/html@latest/styles/material-tailwind.css"
  />

  <!-- component -->
   <body style="background-color: #161513;">
    <% blogs.forEach(blog => { %>
      <section class="bg-[#161513] dark:bg-bg-[#161513]">
        <div class="container px-6 py-10 mx-auto">
            <div class="mt-8 lg:-mx-6 lg:flex lg:items-center">
                <img class="object-cover w-full lg:mx-6 lg:w-1/2 rounded-xl h-72 lg:h-96" src="<%= blog.resim %>" alt="">
    
                <div class="mt-6 lg:w-1/2 lg:mt-0 lg:mx-6">
                    <p class="text-sm text-blue-500 uppercase"><%= blog.date.toLocaleDateString('tr-TR') %></p>
    
                    <a href="/blog/<%= blog.slug %>" class="block mt-4 text-2xl font-semibold text-white hover:underline dark:text-white md:text-3xl">
                      <%= blog.title %>
                    </a>
    
                    <p class="mt-3 text-sm text-gray-300 dark:text-gray-300 md:text-sm">
                      <%= blog.aciklama %>
                    </p>
    
                    <a href="/blog/<%= blog.slug %>" class="inline-block mt-2 text-blue-500 underline hover:text-blue-400">Oku</a>
    
                    <div class="flex items-center mt-6">
                        <img class="object-cover object-center w-10 h-10 rounded-full" src="<%= resim %>" alt="">
                        <div class="mx-4">
                            <h1 class="text-sm text-white dark:text-white"><%= blog.yazar %></h1>
                            <p class="text-sm text-gray-400 dark:text-gray-400"><%= blog.unvan %></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
<% }) %>

</body>
